<br><div>
  <%= link_to 'Change your profile picture via Gravatar (opens in new tab)', 'https://www.gravatar.com/profile', target: "_blank" %>
</div>


<h1>
  <%= profile_gravatar @user %><br>
  edit @<%= current_user.username %>'s profile
</h1>

<%= form_with(model: @profile, url: user_profile_path(current_user)) do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :bio %>
    <%= form.text_area :bio %>
  </div>

  <div>
    <%= form.label :age %>
    <%= form.number_field :age, within: 13...120 %>
  </div>

  <div>
    <%= form.label :location %>
    <%= form.text_field :location %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

