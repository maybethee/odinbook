<h2>All Users</h2>



<div>
  <% @users.each do |user| %>



    <div>
      <%= profile_gravatar user %>
      <%= link_to "@#{user.username}", user_profile_path(user) %>
    </div>
    <div>
      <p><%= user.profile.bio %></p>
    </div><br>

    <div>
      <% unless user == current_user %>
        <%= render '/profiles/follow_button', user: user %>
      <% end %>
    </div>


    <%= render '/profiles/follower_count', user: user %>
    <div><%= user.active_relationships.count %> Following</div>

    --------------------------------------------------
  <% end %>
</div>