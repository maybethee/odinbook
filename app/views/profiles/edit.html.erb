<div>
  <%= link_to 'Change your profile picture via Gravatar (opens in new tab)', 'https://www.gravatar.com/profile', target: "_blank", class: "gravatar-link" %>
</div>

<h1>Edit @<%= current_user.username %>'s Profile</h1>

<%= form_with(model: @profile, url: user_profile_path(current_user), class: "profile-form") do |form| %>
  <div class="form-group">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :bio, class: "form-label" %>
    <%= form.text_area :bio, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :age, class: "form-label" %>
    <%= form.number_field :age, within: 13...120, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :location, class: "form-label" %>
    <%= form.text_field :location, class: "form-input" %>
  </div>

  <div>
    <%= form.submit "Save Changes", class: "submit-button" %>
  </div>
<% end %>
